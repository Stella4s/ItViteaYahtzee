<Window x:Class="ItViteaYahtzee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItViteaYahtzee"
        mc:Ignorable="d"
        Title="Yahtzee" Height="450" Width="800">
    <Grid>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>


                <Grid Background="WhiteSmoke">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ItemsControl Name="iCtrlDice" Grid.Row="1">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="20" Text="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                    
                <Button Grid.Row="2" Content="Roll" Width="150" Height="50" Margin="5"/>

            </Grid>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                <Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0.5, 0.5, 0.5, 0.5" Padding="2">
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
                                <TextBlock TextWrapping="Wrap" Text="Ones" VerticalAlignment="Center" Grid.Row="1"/>
                                <TextBlock TextWrapping="Wrap" Text="Twos" VerticalAlignment="Center" Grid.Row="2"/>
                                <TextBlock TextWrapping="Wrap" Text="Threes" VerticalAlignment="Center" Grid.Row="3"/>
                                <TextBlock TextWrapping="Wrap" Text="Fours" VerticalAlignment="Center" Grid.Row="4"/>
                                <TextBlock TextWrapping="Wrap" Text="Fives" VerticalAlignment="Center" Grid.Row="5"/>
                                <TextBlock TextWrapping="Wrap" Text="Sixes" VerticalAlignment="Center" Grid.Row="6"/>
                                <TextBlock TextWrapping="Wrap" Text="Sum" VerticalAlignment="Center" Grid.Row="7"/>
                                <TextBlock TextWrapping="Wrap" Text="Bonus" VerticalAlignment="Center" Grid.Row="8"/>
                                <TextBlock TextWrapping="Wrap" Text="Three of a kind" VerticalAlignment="Center" Grid.Row="9"/>
                                <TextBlock TextWrapping="Wrap" Text="Four of a kind" VerticalAlignment="Center" Grid.Row="10"/>
                                <TextBlock TextWrapping="Wrap" Text="Full house" VerticalAlignment="Center" Grid.Row="11"/>
                                <TextBlock TextWrapping="Wrap" Text="Small straight" VerticalAlignment="Center" Grid.Row="12"/>
                                <TextBlock TextWrapping="Wrap" Text="Large straight" VerticalAlignment="Center" Grid.Row="13"/>
                                <TextBlock TextWrapping="Wrap" Text="Chance" VerticalAlignment="Center" Grid.Row="14"/>
                                <TextBlock TextWrapping="Wrap" Text="Yahtzee" VerticalAlignment="Center" Grid.Row="15"/>
                                <TextBlock TextWrapping="Wrap" Text="Total Score" VerticalAlignment="Center" Grid.Row="16"/>
                            </Grid>
                        </Border>
                        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0.6, 0.5, 0.5, 0.5" Padding="2"></Border>
                    </Grid>
                    
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
